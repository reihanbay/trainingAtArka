<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/activity_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_a"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/activity_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity B"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/activity_A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/activity_FL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Frame Layout"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/activity_B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/activity_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Linear Layout"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/activity_FL"
        app:layout_constraintBottom_toTopOf="@id/activity_RL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/activity_RL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Relative Layout"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/activity_LL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/activity_CL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Constraint Layout"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/activity_RL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>